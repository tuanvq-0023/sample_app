I18n.defaultLocale = "<%= I18n.default_locale %>";
I18n.locale = "<%= I18n.locale %>";
maximum_image_size = parseInt("<%= Settings.max_image_size %>");
$(document).ready(function () {
  $("#micropost_picture").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > maximum_image_size) {
      alert(I18n.t("maximum_file_size", {maximum: maximum_image_size}) + ". " + I18n.t("choose_smaller_file") + ".");
    }
  });
});
